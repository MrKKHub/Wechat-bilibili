.my_header{
  display: flex;
  align-content: center;
  padding: 10rpx;
  background-color: #fff;
}
.logo > image{
  width: 140rpx;
  height: 60rpx;
}
.search_icon > image{
  width: 60rpx;
  height: 44rpx;
}
.user_icon > image{
  width: 54rpx;
  height: 50rpx;
}
.logo{
  flex: 7;
}
.search_icon{
  flex: 1;
  display: flex;
  justify-content: center;
  align-content: center;
}
.user_icon{
  flex: 2;
  display: flex;
  justify-content: center;
  align-content: center;
}
.down_app{
  flex: 3;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  background-color: pink;
  color: #fff;
  border-radius: 10rpx;
  line-height: 60rpx;
}